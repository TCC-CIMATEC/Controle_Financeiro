@model controleFinanceiro.Models.Financa

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja excluir esse registro?</h3>
<div>
    <h4>Financa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFinanca)
        </dt>
        <dd class = "col-sm-10">
            @Model.DataFinanca.ToString("dd/MM/yyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modalidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modalidade.Descricao)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Descricao)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FinancaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        | @Html.ActionLink("Voltar para a Lista", "Details", "Usuario", new { id = @Model.UsuarioId}) |
    </form>
</div>
